/* pages/login/login.wxss */
.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 97vh; /* 全屏高度，也可以根据实际需求调整 */
  background-color: #f5f5f5; /* 浅灰色背景 */
}

.form-container {
  margin-bottom: 70%;
  width: 85%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 40rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.form-item text {
  width: 120rpx; /* 调整文本的宽度 */
  text-align: left;
  font-size: 32rpx;
  color: #333;
}

.form-item input {
  flex: 1;
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 5rpx;
  font-size: 32rpx;
}

.code-input {
  display: flex;
  align-items: center;
  width: 100%;
}

.get-code-btn {
  margin-left: 20rpx;
  background-color: #2196f3;
  color: #fff;
  font-size: 28rpx;
  border-radius: 5rpx;
  padding: 10rpx 20rpx;
  line-height: 1.5; /* 调整按钮行高 */
  min-width: 100rpx; /* 确保按钮宽度 */
  height: auto; /* 使高度根据内容自适应 */
  text-align: center; /* 居中文本 */
  box-sizing: border-box; /* 包含padding和border在width和height中 */
}

.login-btn, .register-btn {
  width: 100%;
  background-color: #4caf50;
  color: #fff;
  font-size: 36rpx;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.register-link, .login-link {
  text-align: center;
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #999;
}

.register-link text, .login-link text {
  color: #2196f3; /* 链接颜色 */
}