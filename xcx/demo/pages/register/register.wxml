<view class="container">
  <view class="form-container">
    <view class="form-item">
      <text>用户名:</text>
      <input type="text" placeholder="请输入用户名" bindinput="handleUsernameInput" value="{{username}}" />
    </view>
    <view class="form-item">
      <text>邮箱:</text>
      <input type="text" placeholder="请输入邮箱" bindinput="handleEmailInput" value="{{email}}" />
    </view>
    <view class="form-item">
      <text>密码:</text>
      <input type="password" placeholder="请输入密码" bindinput="handlePasswordInput" value="{{password}}" />
    </view>
    <view class="form-item">
      <text>确认密码:</text>
      <input type="password" placeholder="请再次输入密码" bindinput="handleConfirmPasswordInput" value="{{confirmPassword}}" />
    </view>

    <button class="register-btn" bindtap="register">注册</button>

    <view class="login-link">
        <text bindtap="goToLogin">已有账号，去登录</text>
    </view>

  </view>
</view>